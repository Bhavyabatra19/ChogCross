{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./contracts/**/*",
    "./ignition/**/*",
    "./test/**/*",
    "./scripts/**/*",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}